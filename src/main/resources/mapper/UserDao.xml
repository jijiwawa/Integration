<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.forums.dao.UserMapper">
    <select id="isUserNameExist" resultType="int" parameterType="java.lang.String">
        SELECT count(*) FROM dbe.user WHERE user_name=#{username};
    </select>

    <insert id="addUser" parameterType="com.forums.domain.User">
        insert into dbe.user(phone_number, user_name, is_male, password) VALUES (
                #{phoneNumber},#{userName},#{isMale},#{password}
        )
    </insert>

    <select id="getUserByUserName" resultType="com.forums.domain.User" parameterType="java.lang.String">
        select * from dbe.user where user_name=#{username}
    </select>
</mapper>